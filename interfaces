#/etc/network/interfaces
auto lo
iface lo inet loopback

#wired connection to pc
#not needed in this setup
allow-hotplug eth0
iface eth0 inet static
  address 10.42.0.100
  netmask 255.255.255.0

#ap
allow-hotplug wlan0
iface wlan0 inet static
  address 10.0.0.1
  netmask 255.255.255.0
  wireless-mode Master

#wlan1 connect to internet
#wpa-psk is generated by executing $ wpa_passphrase myssid password
#more info: https://wiki.debian.org/WiFi/HowToUse#WPA-PSK_and_WPA2-PSK
allow-hotplug wlan1
iface wlan1 inet dhcp
  wpa-ssid myssid
  wpa-psk password